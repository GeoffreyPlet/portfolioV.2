<div id="modal-create-navbar" style="display: {{displayNavbar ? 'block' : displayNavbar}}">
    <div id="close-create-navbar" class="text-right">
        <span>x</span>
    </div>
    <div class="p-4">
        {{ form_start(navbarForm) }}
            <div>
                {{ form_label(navbarForm.name) }}
                {% if errorsNavbar %}
                <span class="invalid-feedback d-block mb-2">
                    <span class="d-block">
                        <span class="form-error-icon badge badge-danger text-uppercase">Erreur</span> 
                        <span class="form-error-message">{{errorsNavbar[0]}}</span>
                    </span>
                </span>
                {% endif %}
                {{ form_widget(navbarForm.name) }}
            </div>
            <div hidden>
                {{ form_row(navbarForm.logo) }}
            </div>
            <div class="text-center mt-2">
                <button formnovalidate>Ajouter</button>
            </div>
            <div class="d-flex flex-column">
                <p class="m-0 mt-2 sous-titre text-center"> 
                    Cr√©e une navbar avec un titre ou avec un logo
                </p>
                <div class="text-center">
                    <label for="nav-option" class="m-0">Titre - Logo</label>
                    <input type='radio' name="nav-option" id="nav-option" value="name" checked>
                    <input type='radio' name="nav-option" id="nav-option" value="logo">
                </div>
            </div>
        {{ form_end(navbarForm) }}
    </div>
</div>

